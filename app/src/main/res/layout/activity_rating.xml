<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_rating_rectangle"
        android:src="@android:drawable/alert_light_frame"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2_rating"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_rating_rectangle"
        android:layout_toEndOf="@+id/iv_rating_rectangle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resturant Name"
            android:textSize="20sp"
            android:id="@+id/tv_rating_resturantName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rate"
            android:drawableStart="@drawable/rate"
            android:layout_below="@+id/tv_rating_resturantName"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="7.6"
            android:drawablePadding="10dp"
            android:id="@+id/tv_rating_starRating"
            android:paddingRight="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/price"
            android:text="120"
            android:drawablePadding="10dp"
            android:id="@+id/tv_rating_currency"
            android:layout_toRightOf="@+id/tv_rating_starRating"
            android:layout_below="@+id/tv_rating_resturantName"
            />




    </RelativeLayout>


</RelativeLayout>
