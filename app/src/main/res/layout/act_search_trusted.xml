<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

<ImageView
    android:layout_below="@+id/appbar"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/img_trusted"
    android:src="@drawable/our_logo"/>
    <TextView
        android:layout_below="@+id/appbar"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
      android:layout_marginLeft="24dp"
        android:id="@+id/tv_email_trusted"
        android:layout_toRightOf="@+id/img_trusted"
        android:text="dddd"/>

    <TextView
        android:layout_below="@+id/tv_email_trusted"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp"
        android:id="@+id/tv_name_trusted"
        android:layout_toRightOf="@+id/img_trusted"
        android:text="dddd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appbar"
        android:text="Add Trusted"
        android:id="@+id/btn_add_trusted"
        android:textAllCaps="false"
        android:background="@drawable/fab_label_background"
        android:layout_marginTop="70dp"/>
</RelativeLayout>